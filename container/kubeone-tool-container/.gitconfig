[core]
        editor = vim
        autocrlf = input
        excludesfile = ~/.gitignore
[alias]
        co = checkout
        ci = commit
        st = status
        s = status --short
        br = branch
        ll = log -p --name-only
        lg = log --pretty=format:'%Cred%h%Creset %C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
        l = log --oneline --decorate --graph --all
        last = log -1 HEAD
[color]
        diff = auto
        branch = auto
        interactive = auto
        status = auto
        ui = auto
[push]
        default = current
[remote "*"]
        prune = true
[credential]
        helper = store
[fetch]
        prune = true
[pull]
        rebase = false
[safe]
        directory = /home/kubermatic/mnt